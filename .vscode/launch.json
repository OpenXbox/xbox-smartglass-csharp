{
    "version": "0.2.0",
    "configurations": [{
            "name": ".NET Core Launch (connect)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Cli",
            "program": "${workspaceRoot}/SmartGlass.Cli/bin/Debug/netcoreapp2.1/SmartGlass.Cli.dll",
            "cwd": "${workspaceRoot}/SmartGlass.Cli",
            "env": {
                "NETCORE_ENVIRONMENT": "Development"
            },
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Launch (broadcast)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Cli",
            "program": "${workspaceRoot}/SmartGlass.Cli/bin/Debug/netcoreapp2.1/SmartGlass.Cli.dll",
            "args": [
                "broadcast"
            ],
            "env": {
                "NETCORE_ENVIRONMENT": "Development"
            },
            "cwd": "${workspaceRoot}/SmartGlass.Cli",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Launch (pcap)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Cli",
            "program": "${workspaceRoot}/SmartGlass.Cli/bin/Debug/netcoreapp2.1/SmartGlass.Cli.dll",
            "args": [
                "pcap"
            ],
            "env": {
                "NETCORE_ENVIRONMENT": "Development"
            },
            "cwd": "${workspaceRoot}/SmartGlass.Cli",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}